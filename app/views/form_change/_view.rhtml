						<label>New Title:</label>
						<%= h o.demotion_title %>
					</td>
					<td>
						<label>Salary:</label>
						<%= h o.demotion_salary %>
						<% unless o.demotion_salary_per.blank? %> per <%= h o.demotion_salary_per %><% end %>
					</td>
					<td>
						<label>Class:</label>
						<%= h o.demotion_class %>
					</td>
					<td>
						<label>Status:</label>
						<%= h o.demotion_status %>
					</td>
					<td>
						<label>Time:</label>
						<%= h(Const::JOB_TIMES.rassoc(o.demotion_job_time)[0]) rescue nil %>
					&nbsp;</td>
				</tr>
			</table>
		</div>
	</div>
<% end %>

