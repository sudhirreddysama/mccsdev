<%= partial 'form_change/status', :o => @obj %>
<div class="viewer">
	<div class="header">General Info.</div>
	<div class="row">
		<table>
			<tr>
				<td>
					<label>ID:</label>
					<%= o.id %>
				</td>
				<td>
					<label>Name:</label>
					<% if o.employee && !(params[:action] == 'print') %>
						<%= link_to "#{o.last_name}, #{o.first_name}", :controller => :employee, :action => :view, :id => o.employee_id %>
					<% else %>
						<%= h "#{o.last_name}, #{o.first_name}" %>
					<% end %>
				</td>
              <td>
                <label>SSN:</label>
                <%= h o.employee.ssn if o.employee %>
              </td>
				<td>
					<label>Created By:</label>
					<%= h o.user.name if o.user %>
				</td>
				<td>
					<label>Created At:</label>
					<%= h o.created_at.d0? %>
				</td>
				<td>
					<label>Submitted By:</label>
					<%= h o.submitter.name if o.submitter %>
				</td>
				<td>
					<label>Submitted At:</label>
					<%= h o.submitted_at.d0? %>
				&nbsp;</td>
			</tr>
		</table>
	</div>
	
	<div class="row">
		<table>
			<tr>
				<td>
					<label>Present Title:</label>
					<%= h o.present_title %>
				</td>
				<td>
					<label>Provisional?</label>
					<%= yn o.present_provisional %>
				&nbsp;</td>
              <td>
                <label>Retirement No:</label>
                <%= h o.retirement_no %>
                &nbsp;</td>
			</tr>
		</table>
	</div>
	
	<div class="row">
		<table>
			<tr>
				<td>
					<label>Agency:</label>
					<%= h o.agency.name if o.agency %>
				</td>
				<td>
					<label>Department:</label>
					<%= h o.department.name if o.department %><% if o.division %> (<%= h o.division.name %>)<% end %>
				&nbsp;</td>
			</tr>
		</table>
	</div>
	
	<div class="row">
		<table>
			<tr>
				<td>
					<label>Effective Date:</label>
					<%= h o.effective_date.d0? %>
				</td>
				<td>
					<label>Certified List:</label>
					<% if o.cert %>
						<% if params[:action] == 'print' %>
							<%= h o.cert.label %>
						<% else %>
							<%= link_to o.cert.label, :controller => :cert, :action => :view, :id => o.cert_id %>
						<% end %>
					<% end %>
				&nbsp;</td>
			</tr>
		</table>
	</div>
	
	<div class="row">
		<table>
			<tr>
				<td>
					<label>Comments:</label>
					<%= nl2br_h o.comments %>
				&nbsp;</td>
			</tr>
		</table>
	</div>
	
	<%= partial 'form_change/documents' %>
	
</div>

<% if o.change_demotion %>
