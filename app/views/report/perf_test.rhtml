<html>
	<head>
		<style type="text/css">

			html, body { padding: 0; margin: 0; border: 0; }
			body, td, th { font: 11px/16px Trebuchet MS, Verdana, Arial, sans-serif; }
			
			table { border-collapse: collapse; }
			td, th { vertical-align: top; text-align: left; padding: 2px; }
			
			.r { text-align: right; }
			tr { page-break-inside: avoid; }
			
		</style>
	</head>
	<body>
		<div style="float: right;"><%= Time.now.d0? %></div>
		<h3>
			Performance Test Report<br />
			<% if @from_date %>From <%= @from_date.d0? %> <% end %><% if @to_date %>to <%= @to_date.d0? %><% end %>
		</h3>
		<table>
			<tr style="border-top: 1px solid #000; border-bottom: 1px solid #000;">
				<th>Performance Test</th>
				<th>Exam #</th>
				<th>Title</th>
				<th>Exam Date</th>
			</tr>
			<% @objs.each_hash { |o| %>
				<tr style="border-bottom: 1px solid #ccc;">
					<td><%= h o.perf_test_name %></td>
					<td><%= h o.exam_no %></td>
					<td><%= h o.title %></td>
					<td><%= Date.parse(o.given_at).d0? rescue nil %></td>
				</tr>
			<% } %>
		</table>
	</body>
</html>
